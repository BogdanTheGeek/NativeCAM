o<init_turning> sub
(CALL [#off_x] [#off_z] [#finishing_passes])
;(print,#1, #2, #3)
	#<offset_x>          = #1
	#<offset_z>          = #2
	#<finishing_passes>  = #3

	#<b_z> = #<_z>
	#<e_z> = [#<b_z> + #<offset_z>]
	
	o01 if [#<_lathe_diameter_mode> EQ 1]
		#<roughcut>  = [#<_rough_cut> * 2]
		#<finishcut> = [#<_finish_cut> * 2]
		#<b_x>       = [#<_x> * 2]
		#<e_x>       = [[#<_x> + #<offset_x>] * 2]
	o01 else
		#<roughcut>  = #<_rough_cut>
		#<finishcut> = #<_finish_cut>
		#<b_x>       = [#<_x>]
		#<e_x>       = [#<_x> + #<offset_x>]
	o01 endif

	o10 if [#<finishing_passes> GT 0]
		#<cut_rough_total> = [#<b_x> - #<e_x> - #<finishcut>]
	o10 else
		#<cut_rough_total> = [#<b_x> - #<e_x>]
	o10 endif

	#<rough_passes> = FUP[#<cut_rough_total> / #<roughcut>]
	o11 if [#<rough_passes> GT 0]
		#<each_cut> = [#<cut_rough_total> / #<rough_passes>]
	o11 elseif [#<rough_passes> LT 0]
;		o<init_turning> return
	o11 endif

	/ G0 X#<e_x> Z#<b_z>
	/ F10
	/ G1 Z#<e_z>
	/ o<init_turning> return

	M#<_cooling_mode>
	
	o121 if [#<_tool_usage> LE 1]
		F#<_rough_feed>
			G0 X[#<b_x> + #<_x_clear>]
			#<x> = [#<b_x> - #<each_cut>]
			o12 repeat [#<rough_passes>]
				G0 Z#<b_z>
				G0 X#<x>
				G1 Z#<e_z>
				G0 X[#<x> + #<_x_clear>]
				#<x> = [#<x> - #<each_cut>]
			o12 endrepeat
	o121 endif

	o20 if [#<finishing_passes> AND [#<_tool_usage> NE 1]]
		F#<_finish_feed>
			G0 X[#<e_x> + #<_x_clear>]
			o21 repeat [#<finishing_passes>]
				G0 Z#<b_z>
				G0 X#<e_x>
				G1 Z#<e_z>
				G0 X[#<e_x> + #<_x_clear>]
			o21 endrepeat
	o20 endif
	
	M9 (cooling off)

	G0 Z[#<b_z> + #<_z_rapid>]
	G0 X[#<e_x>]
	
o<init_turning> endsub
