(author : Fernand Veilleux)
o<turning> sub
(CALL [#start_x] [#end_x] [#start_z] [#end_z] [#fine_finish])

	#<start_x>     = #1
	#<end_x>       = #2
	#<start_z>     = #3
	#<end_z>       = #4
	#<fine_finish> = #5
	#<tool_path>   = 1
	/ #<tool_path> = 0

	o00 if [#<_lathe_diameter_mode> EQ 1]
		#<roughcut> = [#<_rough_cut> * 2]
		#<finishcut> = [#<_finish_cut> * 2]
	o00 else
		#<roughcut> = #<_rough_cut>
		#<finishcut> = #<_finish_cut>
	o00 endif
	
	o10 if [#<fine_finish> GT 0]
		#<cut_rough_total> = [#<start_x> - #<end_x> - #<finishcut>]
	o10 else
		#<cut_rough_total> = [#<start_x> - #<end_x>]	
	o10 endif
	
	#<rough_pass> = FUP[#<cut_rough_total> / #<roughcut>]
	o11 if [#<rough_pass> GT 0]
		#<each_cut> = [#<cut_rough_total> / #<rough_pass>]
		F#<_rough_feed>
	o11 elseif [#<rough_pass> LT 0]
		o<turning> return
	o11 endif
	
	M#<_cooling_mode>
	G0 X[#<start_x> + #<_x_rapid>]
	#<x> = #<start_x>
	o12 repeat [#<rough_pass>]
		#<x> = [#<x> - #<each_cut>]
		o121 if [[#<_tool_usage> LE 1] AND [#<tool_path> EQ 1]]
			G0 Z#<start_z>
			G0 X[#<x> + #<_x_clear>]
			G1 X#<x>
			G1 Z#<end_z>
			G1 X[#<x> + #<_x_clear>]
			G0 X[#<x> + #<_x_rapid>]
		o121 endif
	o12 endrepeat

	o20 if [#<fine_finish> AND [#<_tool_usage> NE 1] AND [#<tool_path> EQ 1]]
		F#<_finish_feed>
		G0 Z#<start_z>
		o21 repeat [#<fine_finish>]
			G0 Z#<start_z>
			G0 X[#<end_x> + #<_x_clear>]
			G1 X#<end_x>
			G1 Z#<end_z>
			G1 X[#<end_x> + #<_x_clear>]
			G0 X[#<end_x> + #<_x_rapid>]
		o21 endrepeat
	o20 endif
	
	M9 (cooling off)
	G0 X[#<start_x> + #<_x_rapid>]
;	G0 Z#<start_z>
	
	/ G0 X#<end_x> Z#<start_z>
	/ G1 Z#<end_z>
	
o<turning> endsub
